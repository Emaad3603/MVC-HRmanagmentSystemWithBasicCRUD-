@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br /> 
<br /> 

<form asp-action="index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input type="text" name="SearchInput" id="SearchInput" class="form-control" placeholder="Search"/>
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </div>

</form>






<a asp-controller="Role" asp-action="Create" class=" btn btn-primary">Create Role</a>
<br/>
<br/> 
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.RoleName)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                   
                    <td>@user.Id)</td>
                    <td>@user.RoleName</td>
                   
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr> 
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>there is no Roles :(</h4>
    </div>
}

